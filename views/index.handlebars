<header class="bg-primary text-center">
<h1>Quote Favorites</h1>
</header>
<div class="cards bg-secondary text-white ">


<ul>
  {{#each quotefavorites}}
    <li>
      <p>
        {{this.id}}. {{this.quote}}

        <button data-quoteid="{{this.id}}" class="delquote btn btn-primary">Delete</button>
      </p>
    </li>
  {{/each}}
</ul>
</div>
<div class="container">
<h2>Add a Quote Favorite (Use Quotes)</h2>
<form id="addquotefavorite" class="button-size">
	<textarea type="text" name="quotefavorite"></textarea>
  <br />
	<button class="btn btn-primary" type="submit">Save Quote!</button>
</form>
</div>
